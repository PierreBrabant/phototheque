<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
<body>
    <%-include('partials/nav')%>


    <div class="container">
        <div class="row mt-4">
            <div class="col">
                <h1>Mes albums</h1>
                <a href="/albumsCreate" class="btn btn-primary mt-2 mb-4">Nouvel album</a>
            </div>
        </div>
        <div class="row">
            <div class="col col-xs-12 col-sm-4">
                <ul class="list-group">
                    <!-- Boucle for each des albums en BDD -->
                    <%albums.forEach((album) => {%>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <!-- Envoie de l'id dans l'url et affichage dans l'url du nom de l'album -->
                            <a href="/albums/<%=album._id%>"><%=album.title%></a>
                            
                            <a class="link-link badge bg-danger rounded-pill" href="#">Supprimer</a>
                        </li>
                    <%});%>
                    
            </div>
        </div>
    </div>


    <%-include('partials/script')%>
</body>
</html>